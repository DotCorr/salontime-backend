# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
API_VERSION=1.0.0

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Product/Price IDs
STRIPE_PLUS_PLAN_PRICE_ID=price_...
STRIPE_PREMIUM_PLAN_PRICE_ID=price_... # For featured salons
STRIPE_PROFESSIONAL_PLAN_PRICE_ID=price_...
STRIPE_ENTERPRISE_PLAN_PRICE_ID=price_...

# Subscription Configuration
SUBSCRIPTION_TRIAL_DAYS=7
SUBSCRIPTION_CURRENCY=usd
SUBSCRIPTION_ENABLE_TRIALS=true

# Cron Job Configuration (Vercel Crons)
CRON_SECRET=your_secure_random_string_here # Used to authenticate cron job requests

# Payment Configuration
PAYMENT_CURRENCY=usd
PAYMENT_APPLICATION_FEE_PERCENT=0
PLATFORM_FEE_ENABLED=false
COMMISSION_RATE=0.00

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@salontime.app

# Frontend URLs
FRONTEND_URL=http://localhost:3000
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PROD_MAX_REQUESTS=100
RATE_LIMIT_DEV_MAX_REQUESTS=1000

# Request Size Limits
REQUEST_SIZE_LIMIT=10mb
REQUEST_URL_LIMIT=10mb

# Analytics Configuration
DEFAULT_ANALYTICS_PERIOD_DAYS=30
MAX_ANALYTICS_PERIOD_DAYS=365

# Business Configuration
BUSINESS_NAME=SalonTime
SUPPORT_EMAIL=support@salontime.app
COMPANY_ADDRESS="123 Business St, City, State 12345"

# Security Configuration
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d
BCRYPT_SALT_ROUNDS=12

# Booking Configuration
MAX_ADVANCE_BOOKING_DAYS=90
MIN_ADVANCE_BOOKING_HOURS=2
DEFAULT_BOOKING_DURATION_MINUTES=60
MAX_BOOKING_DURATION_MINUTES=480

# Cache Configuration (if needed)
CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379

